<%- include('partials/header'); -%>

    <h1>Compose</h1>

    <form method="post" action="/compose">
        <label for="postTitle" style="margin-top: 5px;">Title</label>
        <input class="form-control me-2" type="text" name="postTitle" placeholder="Title" aria-label="content"
            autocomplete="off">
        <label for="postBody" style="margin-top: 5px;">Post</label> 
        <textarea class="form-control" aria-label="With textarea" name="postBody" placeholder="Post Content"></textarea>
        <button type="submit" class="btn btn-primary" style="margin-top: 5px;">
            Publish
        </button>
    </form>

    <%- include('partials/footer'); -%>